 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT 
  COMPANY
  ADMIN
}

enum Status {
  VERIFIED
  PENDING
  DECLINED
}

enum WorkType {
  REMOTE
  ONSITE
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
}

enum PaymentType {
  ESEWA
  STRIPE
}

enum BidRequestStatus {
  SENT
  DECLINED
}

enum BidStatus {
  DECLINED
  ACCEPTED
  INITIATED
  PENDING
}

enum NotificationType {
  quote_request_sent
  new_quote_created
  new_company_pending_verification
  contract_generated
  payment_received
}

model User {
  id             Int       @id @default(autoincrement())
  name           String    
  email          String    @unique
  phone          String    @unique
  address        String
  role           Role      @default(CLIENT)
  password       String 
  status         Status   @default(PENDING)
  emailVerified  Boolean  @default(false)
  companies      Company[]
  requirements   Requirement[]
  notifications  Notification[]
  bidRequest     BidRequest[]
}

model Company {
  id                Int         @id @default(autoincrement())
  name              String   
  registrationNo    String      @unique
  description       String
  establishedYear   String
  serviceCategory   String
  websiteUrl        String?
  services          Services[]
  priceRangeMin     Int
  priceRangeMax     Int
  avgDeliveryTime   String
  userId            Int
  user              User          @relation(fields: [userId], references: [id])
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  docs              CompanyDocs[]
  projects          Project[]
  payment           PaymentMethod[]
  bidRequest        BidRequest[]
  bid               Bid[]
}

model Services {
  serviceId   Int     @id @default(autoincrement())
  companyId   Int
  company     Company @relation(fields: [companyId], references: [id])    
  service     String
}

model CompanyDocs{
  docsId            Int     @id @default(autoincrement())
  logo              String
  businessLicense   String
  taxCertificate    String
  ownerId           String?
  companyId         Int
  company           Company @relation(fields: [companyId], references: [id])
}

model Project {
  projectId         Int       @id @default(autoincrement())
  title             String
  description       String
  completionDate    String
  projectUrl        String?
  imageUrl          String? 
  companyId         Int
  company           Company   @relation(fields: [companyId], references: [id])
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt     
}

model PaymentMethod {
  id          Int   @id @default(autoincrement())
  type        PaymentType   // 'ESEWA' or 'STRIPE'
  
  // Common fields
  isDefault   Boolean  @default(false)
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // ESEWA specific fields
  accountName String?
  phoneNumber String?
  
  // Stripe specific fields
  publicKey   String?
  secretKey   String?
  businessName String?
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Indexes
  @@index([companyId])
  @@unique([companyId, type])
}

model Requirement {
  id              Int       @id @default(autoincrement())
  title           String
  description     String
  workType        WorkType
  minimumBudget   Int
  maximumBudget   Int
  category        String
  timeline        String
  skills          String[]
  attachment      String    @default("")
  urgency         Urgency
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bidRequest      BidRequest[]
  bid             Bid[]
}

model Notification {
  id          Int   @id @default(autoincrement())
  title       String
  message     String
  type        NotificationType
  isRead      Boolean  @default(false)
  channel     String?
  data        Json?
  userId      Int? 
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BidRequest {
  id              Int     @id @default(autoincrement())
  userId          Int
  companyId       Int
  requirementId   Int
  requestedAt     DateTime @default(now())
  status          BidRequestStatus?
  user            User?    @relation(fields: [userId], references: [id])
  company         Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  requirement     Requirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)
}


model Bid {
  id            Int       @id @default(autoincrement())
  amount        Int       
  deliveryTime  String
  message       String?
  companyId     Int
  requirementId Int
  status        BidStatus
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  requirement   Requirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

   @@unique([requirementId, companyId])
}

