 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT 
  COMPANY
  ADMIN
}

enum Status {
  VERIFIED
  PENDING
  DECLINED
}


model User {
  id             Int       @id @default(autoincrement())
  name           String    
  email          String    @unique
  phone          String    @unique
  address        String
  role           Role      @default(CLIENT)
  password       String 
  status         Status   @default(PENDING)
  emailVerified  Boolean  @default(false)
}