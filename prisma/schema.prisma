 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT 
  COMPANY
  ADMIN
}

enum Status {
  VERIFIED
  PENDING
  DECLINED
}


model User {
  id             Int       @id @default(autoincrement())
  name           String    
  email          String    @unique
  phone          String    @unique
  address        String
  role           Role      @default(CLIENT)
  password       String 
  status         Status   @default(PENDING)
  emailVerified  Boolean  @default(false)
  companies      Company[]
}

model Company {
  id                Int         @id @default(autoincrement())
  name              String   
  registrationNo    String      @unique
  description       String
  establishedYear   String
  serviceCategory   String
  websiteUrl        String?
  services          Services[]
  priceRangeMin     Int
  priceRangeMax     Int
  avgDeliveryTime   String
  userId            Int
  user              User        @relation(fields: [userId], references: [id])
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  docs              CompanyDocs[]
}

model Services {
  serviceId   Int     @id @default(autoincrement())
  companyId   Int
  company     Company @relation(fields: [companyId], references: [id])    
  service     String
}

model CompanyDocs{
  docsId            Int     @id @default(autoincrement())
  logo              Bytes
  businessLicense   Bytes
  ownerId           Bytes?
  companyId         Int
  company           Company @relation(fields: [companyId], references: [id])
}