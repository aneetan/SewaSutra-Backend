 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT 
  COMPANY
  ADMIN
}

enum Status {
  VERIFIED
  PENDING
  DECLINED
}

enum WorkType {
  REMOTE
  ONSITE
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
}

enum PaymentType {
  ESEWA
  STRIPE
}

enum BidRequestStatus {
  SENT
  DECLINED
}

enum BidStatus {
  DECLINED
  ACCEPTED
  INITIATED
  PENDING
}

enum NotificationType {
  quote_request_sent
  new_quote_created
  new_company_pending_verification
  contract_generated
  payment_received
}

enum ChatStatus {
  ACTIVE
  ARCHIVED
  BLOCKED
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
}

enum ContractStatus {
  PENDING_SIGNATURE
  ACTIVE
  COMPLETED
  TERMINATED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PARTIALLY_PAID
  FULLY_PAID
  CANCELLED
}

enum ServiceType {
  MEP
  IT
}

model User {
  id             Int       @id @default(autoincrement())
  name           String    
  email          String    @unique
  phone          String    @unique
  address        String
  role           Role      @default(CLIENT)
  password       String 
  status         Status   @default(PENDING)
  emailVerified  Boolean  @default(false)

  companies      Company[]
  requirements   Requirement[]
  notifications  Notification[]
  bidRequest     BidRequest[]

  chatsAsParticipant1 Chat[] @relation("ChatParticipant1")
  chatsAsParticipant2 Chat[] @relation("ChatParticipant2")
  messagesSent        Message[] @relation("MessageSender")

  presence       UserPresence?
  contracts       Contract[]

}

model Company {
  id                Int         @id @default(autoincrement())
  name              String   
  registrationNo    String      @unique
  description       String
  establishedYear   String
  serviceCategory   String
  websiteUrl        String?
  services          Services[]
  priceRangeMin     Int
  priceRangeMax     Int
  avgDeliveryTime   String
  userId            Int
  user              User          @relation(fields: [userId], references: [id])
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  docs              CompanyDocs[]
  projects          Project[]
  payment           PaymentMethod[]
  bidRequest        BidRequest[]
  bid               Bid[]
  contracts         Contract[]
}

model Services {
  serviceId   Int     @id @default(autoincrement())
  companyId   Int
  company     Company @relation(fields: [companyId], references: [id])    
  service     String
}

model CompanyDocs{
  docsId            Int     @id @default(autoincrement())
  logo              String
  businessLicense   String
  taxCertificate    String
  ownerId           String?
  companyId         Int
  company           Company @relation(fields: [companyId], references: [id])
}

model Project {
  projectId         Int       @id @default(autoincrement())
  title             String
  description       String
  completionDate    String
  projectUrl        String?
  imageUrl          String? 
  companyId         Int
  company           Company   @relation(fields: [companyId], references: [id])
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt     
}

model PaymentMethod {
  id          Int   @id @default(autoincrement())
  type        PaymentType   // 'ESEWA' or 'STRIPE'
  
  // Common fields
  isDefault   Boolean  @default(false)
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // ESEWA specific fields
  accountName String?
  phoneNumber String?
  
  // Stripe specific fields
  publicKey   String?
  secretKey   String?
  businessName String?
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Indexes
  @@index([companyId])
  @@unique([companyId, type])
}

model Requirement {
  id              Int       @id @default(autoincrement())
  title           String
  description     String
  workType        WorkType
  minimumBudget   Int
  maximumBudget   Int
  category        String
  timeline        String
  skills          String[]
  attachment      String    @default("")
  urgency         Urgency
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bidRequest      BidRequest[]
  bid             Bid[]
  contracts       Contract[]
}

model Notification {
  id          Int   @id @default(autoincrement())
  title       String
  message     String
  type        NotificationType
  isRead      Boolean  @default(false)
  channel     String?
  data        Json?
  userId      Int? 
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BidRequest {
  id              Int     @id @default(autoincrement())
  userId          Int
  companyId       Int
  requirementId   Int
  requestedAt     DateTime @default(now())
  status          BidRequestStatus?
  user            User?    @relation(fields: [userId], references: [id])
  company         Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  requirement     Requirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)
}


model Bid {
  id            Int       @id @default(autoincrement())
  amount        Int       
  deliveryTime  String
  message       String?
  companyId     Int
  requirementId Int
  status        BidStatus
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  requirement   Requirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

   @@unique([requirementId, companyId])
}

model Chat {
  id            Int        @id @default(autoincrement())
  participant1Id Int          // User ID
  participant2Id Int          // User ID
  participant1   User         @relation("ChatParticipant1", fields: [participant1Id], references: [id])
  participant2   User         @relation("ChatParticipant2", fields: [participant2Id], references: [id])
  status         ChatStatus    @default(ACTIVE)
  lastMessageId   Int?
  lastMessage   Message?      @relation("LastMessage", fields: [lastMessageId], references: [id])
  messages       Message[]  @relation("MessagesInChat")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Ensure unique chat between two users
  @@unique([participant1Id, participant2Id])
  @@unique([lastMessageId])
  @@index([participant1Id, participant2Id])
}

model Message {
  id            Int        @id @default(autoincrement())
  chatId        Int
  chat          Chat          @relation("MessagesInChat",fields: [chatId], references: [id], onDelete: Cascade)
  senderId      Int
  sender        User         @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  content       String
  status        MessageStatus @default(SENT)
  isEdited      Boolean       @default(false)
  isDeleted     Boolean       @default(false)
  attachments   Json? 
  readBy        Int[]         // Array of user IDs who have read the message
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  chatAsLastMessage Chat? @relation("LastMessage")
  

  @@index([chatId, createdAt])
}

model UserPresence {
  id          Int       @id @default(autoincrement())
  userId      Int       @unique
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  isOnline    Boolean   @default(false)
  lastSeen    DateTime  @default(now())
  socketId    String?
  updatedAt   DateTime  @updatedAt
}

model Contract {
  id                      Int               @id @default(autoincrement())
  projectId               String            @unique
  serviceType             ServiceType
  amount                  Int 
  advancePercent          Int
  durationDays            String
  defectLiabilityMonths   Int
  location                String
  scopeSummary            String
  status                  ContractStatus      @default(PENDING_SIGNATURE)
  companyId               Int
  company                 Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  clientId                Int
  client                  User                @relation(fields: [clientId], references: [id], onDelete: Cascade)
  requirementId           Int
  requirement             Requirement        @relation(fields: [requirementId], references: [id], onDelete: Cascade)
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt
  paymentStatus           PaymentStatus      @default(PENDING)
  contractFile            String

  @@index([projectId])
  @@index([companyId])
  @@index([clientId])
  @@index([status])
  @@index([paymentStatus])
}



